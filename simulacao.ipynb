def chapeu(tamanho, favoravel, lista):
    for i in range(2000):
        temp = tamanho
        temp2 = favoravel
        a = 0
        while(temp > 0):
            voto = random.randint(0,1)
            if(voto == 1):
                if(temp2 > 0):
                    a = a+1
                    temp2 = temp2 - 1
            temp = temp - 1
        lista.append(a/tamanho)            
    return lista
    
    

def getMedia(lista):
    if len(lista) == 0:
        return 0
    return sum(lista)/len(lista)

def getDesvio(media, lista):
    dp = 0
    for i in range(len(lista)):
        dp = dp + (((lista[i]-media)*(lista[i]-media))/len(lista))
    return dp

